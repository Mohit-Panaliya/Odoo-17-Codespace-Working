<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="quick_upgrade_page" name="Quick Module Upgrade">
        <t t-call="web.layout">
            <t t-set="title" t-value="'Quick Module Upgrade'"/>

            <div class="o_application" style="padding: 20px;">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">

                        <!-- Header Card -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h3 class="mb-0">
                                    <i class="fa fa-rocket"></i> Quick Module Upgrade
                                </h3>
                            </div>
                            <div class="card-body">
                                <p class="text-muted">
                                    Select a module from the dropdown and click Upgrade to update it instantly.
                                </p>

                                <form action="/q" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <!-- Custom Modules Dropdown -->
                                    <div class="form-group mb-3">
                                        <label class="form-label">
                                            <strong><i class="fa fa-folder"></i> Custom Modules (custom_addons)</strong>
                                        </label>
                                        <select name="module_id" class="form-select" required="True">
                                            <option value="">-- Select Custom Module --</option>
                                            <t t-foreach="custom_modules" t-as="mod">
                                                <option t-att-value="mod['id']" t-esc="mod['name']"/>
                                            </t>
                                        </select>
                                    </div>

                                    <div class="text-center my-3">
                                        <span class="text-muted">- OR -</span>
                                    </div>

                                    <!-- All Installed Modules Dropdown -->
                                    <div class="form-group mb-3">
                                        <label class="form-label">
                                            <strong><i class="fa fa-th-large"></i> All Installed Modules</strong>
                                        </label>
                                        <select name="module_id" class="form-select">
                                            <option value="">-- Select Installed Module --</option>
                                            <t t-foreach="installed_modules" t-as="mod">
                                                <option t-att-value="mod['id']" t-esc="mod['name']"/>
                                            </t>
                                        </select>
                                    </div>

                                    <!-- Upgrade Button -->
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-lg btn-success">
                                            <i class="fa fa-arrow-up"></i> Upgrade Module
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Success Message -->
                        <t t-if="upgrade_success">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong><i class="fa fa-check-circle"></i> Success!</strong>
                                Module '<t t-esc="success_module"/>' has been upgraded successfully.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        </t>

                        <!-- Error Message -->
                        <t t-if="error_msg">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong><i class="fa fa-exclamation-circle"></i> Error!</strong>
                                <t t-esc="error_msg"/>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        </t>

                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

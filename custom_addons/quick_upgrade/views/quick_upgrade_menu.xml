<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for menu -->
    <record id="quick_upgrade_url_action" model="ir.actions.act_url">
        <field name="name">Quick Upgrade</field>
        <field name="url">/q</field>
        <field name="target">self</field>
    </record>

    <!-- Menu Item -->
    <record id="quick_upgrade_menu_item" model="ir.ui.menu">
        <field name="name">Quick Upgrade</field>
        <field name="sequence">1</field>
        <field name="action" ref="quick_upgrade.quick_upgrade_url_action"/>
        <field name="parent_id" ref="base.menu_administration"/>
    </record>
</odoo>
